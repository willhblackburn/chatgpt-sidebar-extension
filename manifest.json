{
  "manifest_version": 3,
  "name": "ChatGPT Sidebar Toggle",
  "version": "1.0",
  "description": "Toggle displaying the sidebar on ChatGPT.",
  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://chat.openai.com/*"],
      "js": ["content.js"]
    }
  ]
}
